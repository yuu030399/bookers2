
  <h2>User info</h2>
<table class="table">
  <tbody>
    <%= image_tag user.get_profile_image(100, 100)%>
  
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</tbody>
</table>


<%= link_to edit_user_path(@user), class: "btn btn-secondary w-100" do %>
<i class="fas fa-user-cog"></i>
<% end %>

   <h1>New book</h1>
<%= form_with model: Book.new do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area:body%>

  <%= f.submit 'Create Book' %>
  <%end%>
  